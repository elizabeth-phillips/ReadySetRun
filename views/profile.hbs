
<div class="container">
    <h1>{{@first_name}} {{@last_name}} Profile</h1>
    <hr>
    <h2 class="row">User Info</h2>
    <div class="row">
        <form action="../profile/{{@id}}" method="post" class="col-sm-12 col-md-10 col-lg-8 mx-20">
            <div class="text-input-container">
                <input type="text" class="form-control" placeholder="First name" value={{@first_name}}>
                <input type="text" class="form-control" placeholder="Last Name"  value={{@last_name}}>
                <input type="text" class="form-control" placeholder="Email"  value={{@email}}>
                <input type="password" class="form-control" placeholder="Password"  value={{@password}}>
                <input type="text" class="form-control" placeholder="Phone Number"  value={{@phone}}>
                <input type="text" class="form-control" placeholder="City"  value={{@city}}>
                <input type="text" class="form-control" placeholder="State"  value={{@state}}>
                <input type="text" class="form-control" placeholder="Zipcode"  value={{@zipcode}}>
                <input type="text" class="form-control" placeholder="Age"  value={{@age}}>
                <input type="text" class="form-control" placeholder="Desired Pace"  value={{@desired_pace}}>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
    <br>
    <h2 class="row mx-10">Races</h2>
    <div class="row">
        {{#each races }}
            <div class="card col-lg-4 col-sm-6 col-xs-12" style="width: 18rem;">
                <div class="card-header">
                    <b>{{name}}</b>
                </div>
                <div class="card-body">
                    <h5 class="card-title">{{format_date date}}</h5>
                    <p class="card-text">
                        {{distance}} Miles <br>
                        <b>Ranking:</b> {{ranking}}<br>
                        <b>Pace:</b> {{pace}}<br>
                        <b>Location:</b> {{city}}, {{state}} {{zipcode}}
                    </p>
                    <a href="../../race/showbyid/{{race_id}}" class="btn btn-primary">View Details</a>
                </div>
            </div>
        {{/each}}
    </div>
    <hr>
    <h2 class="row mx-10">Running Groups</h2>
    <div class="row">
        {{#each races }}
            <div class="card col-lg-4 col-sm-6 col-xs-12" style="width: 18rem;">
                <div class="card-header">
                    <b>{{name}}</b>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        <b>Pace:</b> {{pace}}<br>
                        <b>Phone:</b> {{phone}}<br>
                        <b>Location:</b> {{city}}, {{state}} {{zipcode}}
                    </p>
                    <a href="../../running_group/{{rg_id}}" class="btn btn-primary">View Details</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>