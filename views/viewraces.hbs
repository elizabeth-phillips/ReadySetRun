<div class="container">
    <div class = "row">
    <div class="input-group col-md-8">
        <input class="form-control" type="text" placeholder="Search" aria-label="Search">
        <button class="btn btn-primary">Search</button>
    </div>
    </div>
    <br><br>
    {{#grouped_each 3 data}}
    <div class="row">
        {{#each this }}

        <div class="card" style="width: 18rem;">
            <div class="card-header">
                <b>{{name}}</b>
            </div>
            <div class="card-body">
                <h5 class="card-title">{{format_date date}}</h5>
                <p class="card-text">
                    {{distance}} Miles <br>
                    <b>Location:</b> {{city}}, {{state}} {{zipcode}}<br>
                    <b>Phone:</b> {{phone}}<br>
                    <b>Email:</b> {{email}}
                </p>
                <a href="race/showbyid/{{id}}" class="btn btn-primary">View Details</a>
            </div>
        </div>
        {{/each}}
    </div>
    {{/grouped_each}}
</div>