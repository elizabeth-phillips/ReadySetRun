<div class="jumbotron container">
    {{#if @logo}}
        <div class="col-md-4 mb-5">
            <img src="{{@logo}}"  style="width:100%">
        </div>
    {{/if}}
    <h1 class="display-4">{{@name}} Info</h1>
    <div class="row">
        <section class="col-md-6">
            <h2> Race Information</h2>
            <table style="width:80%">
                <tr>
                    <td><b>Distances</b>  </td>
                    <td>{{@distances}}</td>
                </tr>
                <tr>
                    <td><b>Location</b> </td>
                    <td> {{@city}}, {{@state}} {{@zipcode}}</td>
                </tr>
                <tr>
                    <td><b>Phone</b> </td>
                    <td>{{@phone}}</td>
                </tr>
                <tr>
                    <td><b>Url</b> </td>
                    <td><a href="{{@url}}">{{@url}}</a></td>
                </tr>
            </table>
            <br>
            {{#if user.first_name}}
                {{#unless isPart}}
                    <button onClick= "signUpRace()" type="submit" class="btn btn-primary">Sign Up</button>
                {{/unless}}
            {{/if}}
            <br><br>
            <a href="/race/"><button class="btn btn-primary">View All Races</button></a>
        </section>
        {{#if user.first_name}}
            {{#unless isPart}}
                <section class="col-md-6">
                
                <form action="/race/signup/{{@name}}" method="post" id="search_results">
                    <div class="col-lg-3 col-md-3 col-sm-3">
                        <select name="selectpicker" class="selectpicker col-sm-2 mx-3" form="search_results">
                            {{#each distances}}
                                <option value="{{this}}">{{this}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary" style="width:80%;height:80%">Done</button>
                </form>
            
                </section>
            {{/unless}}
        {{/if}}
    </div>
</div>
